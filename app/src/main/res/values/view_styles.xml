<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--横向分割线 1dp-->
    <style name="split_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/split_line</item>
    </style>

    <!--底部菜单item Icon-->
    <style name="main_bottom_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/bottom_icon_height</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!--底部菜单item title-->
    <style name="main_bottom_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/selector_main_bottom_title</item>
    </style>

    <!--底部菜单item外layout-->
    <style name="main_bottom_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_menu_bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--状态栏底部颜色-->
    <style name="title_status">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <!--刷新加载-->
    <style name="refresh_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--自定义进度条-->
    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--单行文本-->
    <style name="text_single">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--单行文本后边省略-->
    <style name="text_single_ellipsize" parent="text_single">
        <item name="android:ellipsize">end</item>
    </style>

    <!--线性布局竖直布局-->
    <style name="linelayout_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--高低自适应-->
    <style name="layout_mm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--文字之正常字体-->
    <style name="text_normal" parent="text_14"></style>

    <!--文字之12-->
    <style name="text_12" parent="layout_mm">
        <item name="android:textSize">12sp</item>
    </style>
    <!--文字之14-->
    <style name="text_14" parent="layout_mm">
        <item name="android:textSize">14sp</item>
    </style>
    <!--文字之16-->
    <style name="text_16" parent="layout_mm">
        <item name="android:textSize">16sp</item>
    </style>
    <!--文字之18-->
    <style name="text_18" parent="layout_mm">
        <item name="android:textSize">18sp</item>
    </style>

    <!--文字之18-->
    <style name="text_singleline" parent="layout_mm">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--订场地 搜索条件按钮-->
    <style name="text_ground_menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--订场地 搜索条件按钮-->
    <style name="ll_ground_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimens_8</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--按钮-->
    <style name="Button_Cancle" parent="Button_Normal">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_button_cacle</item>
    </style>

    <!--输入框-->
    <style name="Edit_Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/bg_editext_normal</item>
    </style>

    <!--文本默认-->
    <style name="Text_Normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--没有边框的输入框-->
    <style name="Edit_NoBg_MW" parent="Edit_Normal">
        <item name="android:background">@color/translucent</item>
        <item name="android:layout_marginLeft">@dimen/dimens_8</item>
        <item name="android:layout_marginRight">@dimen/dimens_8</item>
        <item name="android:layout_marginTop">@dimen/dimens_3</item>
        <item name="android:layout_marginBottom">@dimen/dimens_3</item>
    </style>

    <!--横向分割线-->
    <style name="Line_W">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/split_line</item>
        <item name="android:layout_marginLeft">@dimen/dimens_8</item>
        <item name="android:layout_marginRight">@dimen/dimens_8</item>
    </style>

    <!--竖向分割线-->
    <style name="Line_H">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg_line</item>
        <item name="android:layout_marginLeft">@dimen/dimens_8</item>
        <item name="android:layout_marginRight">@dimen/dimens_8</item>
    </style>

    <!--轮播图-->
    <style name="Banner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/qb_px_200</item>
    </style>

    <!--CollapsingToolbarLayout(一般和轮播图一起用，所以大小和轮播一样)-->
    <style name="Collapsing" parent="Banner">
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
    </style>

    <!--默认的标题栏-->
    <style name="Toolbar_Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--透明的标题栏-->
    <style name="Toolbar_Translucent" parent="Toolbar_Normal">
        <item name="android:background">@color/translucent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--标题属性居中-->
    <style name="ToolBar_Title" parent="WraWra">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- ********** Login *********-->

    <!--密码框-->
    <style name="Et_Password" parent="Edit_NoBg_MW">
        <item name="android:inputType">textPassword</item>
    </style>

    <!--用户名-->
    <style name="Et_UserName" parent="Edit_NoBg_MW">
        <item name="android:inputType">number</item>
    </style>

    <!--验证码获取按钮-->
    <style name="Btn_Code" parent="Button_Normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_small</item>
    </style>

    <!--验证码输入框-->
    <style name="Et_Code" parent="Edit_NoBg_MW">
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">number</item>
    </style>


    <!-- ********** Fragment Home *********-->

    <!-- 当前所在城市 -->
    <style name="Tv_City" parent="WraWra">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- ********** Fragment Home *********-->

    <!-- 搜索框 -->
    <style name="ET_Scaner" parent="MatMat">
        <item name="android:layout_height">28dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/share_radius1111_e3_16</item>
    </style>

    <!-- 菜单 -->
    <style name="Img_Menu" parent="WraWra">
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginLeft">@dimen/dimens_16</item>
        <item name="android:layout_marginRight">@dimen/dimens_16</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <!-- ********** Fragment Self *********-->

    <!-- 设置 -->
    <style name="Self_Img_Setting">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">@dimen/dimens_16</item>
        <item name="android:padding">@dimen/dimens_3</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@mipmap/ic_setting</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 消息 -->
    <style name="Self_Img_Message">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:padding">@dimen/dimens_3</item>
        <item name="android:layout_marginRight">@dimen/dimens_16</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:src">@mipmap/ic_message</item>
    </style>

    <!-- ********** Activity Search *********-->

    <!-- 搜索按钮 -->
    <style name="Search_Tv_Search" parent="WraWra">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>