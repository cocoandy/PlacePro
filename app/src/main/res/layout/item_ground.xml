<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_16">

    <ImageView
        android:id="@+id/item_ground_cover"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:scaleType="center"
        android:layout_marginRight="@dimen/margin_16" />

    <TextView
        android:id="@+id/item_ground_name"
        style="@style/text_singleline"
        android:layout_toRightOf="@+id/item_ground_cover"
        android:text="深圳北站" />

    <TextView
        android:id="@+id/item_ground_peoples"
        style="@style/text_singleline"
        android:layout_below="@+id/item_ground_name"
        android:layout_toRightOf="@+id/item_ground_cover"
        android:text="人流量：10000" />

    <TextView
        android:id="@+id/item_ground_orders"
        style="@style/text_singleline"
        android:layout_below="@+id/item_ground_name"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_toRightOf="@+id/item_ground_peoples"
        android:text="历史单量：10000" />

    <TextView
        android:id="@+id/item_ground_address"
        style="@style/text_singleline"
        android:layout_below="@+id/item_ground_peoples"
        android:layout_toRightOf="@+id/item_ground_cover"
        android:text="深圳 北站 俩俩俩" />

    <TextView
        android:id="@+id/item_ground_status"
        style="@style/text_singleline"
        android:layout_below="@+id/item_ground_address"
        android:layout_toRightOf="@+id/item_ground_cover"
        android:background="@drawable/share_radius1111_e3_16"
        android:layout_marginTop="3dp"
        android:text="免押金"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/item_ground_price"
        style="@style/text_singleline"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_below="@+id/item_ground_status"
        android:layout_toRightOf="@+id/item_ground_cover"
        android:text="免押金"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/item_ground_price_msg"
        style="@style/text_singleline"

        android:layout_alignBottom="@+id/item_ground_price"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_toRightOf="@+id/item_ground_price"
        android:text="/月起"
        android:textSize="10sp" />
</RelativeLayout>