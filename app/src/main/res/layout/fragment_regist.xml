<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_login_phone"
        style="@style/Edit_Normal"
        android:hint="请输入手机号"
        android:layout_marginTop="@dimen/dimens_16"/>
    <EditText
        android:id="@+id/et_login_code"
        style="@style/Edit_Normal"
        android:hint="请输入验证码"
        android:layout_toLeftOf="@+id/btn_login_code"
        android:layout_marginTop="@dimen/dimens_16"
        android:layout_below="@+id/et_login_phone"/>

    <Button
        android:id="@+id/btn_login_code"
        style="@style/Button_Normal"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_login_phone"
        android:layout_marginTop="@dimen/dimens_16"
        android:text="@string/btn_code" />

    <EditText
        android:id="@+id/et_login_password"
        style="@style/Edit_Normal"
        android:layout_marginTop="@dimen/dimens_16"
        android:hint="请输入登录密码"
        android:layout_below="@+id/et_login_code"/>

    <Button
        android:id="@+id/btn_login_submit"
        style="@style/Button_Normal"
        android:layout_below="@+id/et_login_password"
        android:layout_marginTop="@dimen/dimens_16"
        android:text="@string/btn_regist" />
</RelativeLayout>