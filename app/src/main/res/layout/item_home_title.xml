<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimens_16">

    <View
        android:id="@+id/item_home_title_line"
        style="@style/split_line"
        android:layout_height="8dp"
        android:layout_marginBottom="@dimen/dimens_16" />

    <TextView
        android:id="@+id/item_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@+id/item_home_title_line"
        android:layout_marginLeft="@dimen/dimens_16"
        android:text="Ttitle" />

    <TextView
        android:id="@+id/item_home_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_home_title_line"
        android:layout_marginRight="@dimen/dimens_16"
        android:text="查看更多" />
</RelativeLayout>