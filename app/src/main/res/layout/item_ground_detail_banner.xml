<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatWra"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/item_ground_banner"
        style="@style/Banner" />

    <LinearLayout style="@style/MatWra">

    </LinearLayout>

    <View style="@style/Line_W" />

    <TextView
        android:id="@+id/item_ground_name"
        style="@style/Text_Normal"
        android:layout_marginLeft="@dimen/dimens_16"
        android:layout_marginTop="@dimen/dimens_10"
        android:text="项目类型:"
        android:textSize="@dimen/size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_ground_formal"
            style="@style/Text_Normal"
            android:layout_marginLeft="@dimen/dimens_16"
            android:layout_marginTop="@dimen/dimens_10"
            android:layout_weight="1"
            android:text="场地面积:" />

        <TextView
            android:id="@+id/item_ground_local"
            style="@style/Text_Normal"
            android:layout_marginLeft="@dimen/dimens_16"
            android:layout_marginTop="@dimen/dimens_10"
            android:layout_weight="1"
            android:text="场地位置:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimens_10">


        <TextView
            android:id="@+id/item_ground_time"
            style="@style/Text_Normal"
            android:layout_marginLeft="@dimen/dimens_16"
            android:layout_marginTop="@dimen/dimens_10"
            android:text="开放时间:" />

    </LinearLayout>

    <View style="@style/Line_W" />

    <TextView
        android:id="@+id/item_ground_address"
        style="@style/Text_Normal"
        android:layout_marginLeft="@dimen/dimens_16"
        android:layout_marginTop="@dimen/dimens_10"
        android:layout_marginBottom="@dimen/dimens_10"
        android:text="深圳民治天虹101号:" />

    <View style="@style/Line_W" />
</LinearLayout>