<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_progress_bar"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimens_16">

    <ProgressBar
        android:id="@+id/_progress_bar"
        android:layout_width="@dimen/width_progressbar"
        android:layout_height="@dimen/height_progressbar"
        android:indeterminateDrawable="@drawable/amin_progress_loadding" />

    <TextView
        android:id="@+id/_tv_loading_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dimens_8"
        android:textColor="@color/white" />

</LinearLayout>