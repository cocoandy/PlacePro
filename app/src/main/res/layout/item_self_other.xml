<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/item_self_other_line"
        style="@style/split_line"
        android:layout_height="8dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_self_other_title"
            style="@style/text_normal"
            android:layout_margin="@dimen/margin_16"
            android:text="我的订单" />

        <TextView
            android:id="@+id/item_self_other_msg"
            style="@style/text_12"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_self_other_right"
            android:text="" />

        <ImageView
            android:id="@+id/item_self_other_right"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:layout_marginRight="@dimen/margin_16"
            android:src="@mipmap/right" />
    </RelativeLayout>

</LinearLayout>